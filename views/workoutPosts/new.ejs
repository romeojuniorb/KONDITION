<% layout('layouts/boilerplate') %>

<div class="row">
    <h1 class="text-center">Create a New Workout Post</h1>
    <div class="col-6 offset-3">
        <form action="/workoutPosts" method="POST" novalidate class="validated-form">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="title" required>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" id="description" name="description"></textarea>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="tags">Tags (comma-separated)</label>
                <input class="form-control" type="text" id="tags" name="tags">
                <div class="valid-feedback">Looks good!</div>
            </div>
            <h2>Exercise</h2>
            <div class="mb-3">
                <label class="form-label" for="exercises[0][name]">Name</label>
                <input class="form-control" type="text" id="exercises[0][name]" name="exercises[0][name]" required>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="exercises[0][sets]">Sets</label>
                <input class="form-control" type="number" id="exercises[0][sets]" name="exercises[0][sets]">
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="exercises[0][reps]">Reps</label>
                <input class="form-control" type="number" id="exercises[0][reps]" name="exercises[0][reps]">
                <div class="valid-feedback">Looks good!</div>
            </div>
            <h2>Totals</h2>
            <div class="mb-3">
                <label class="form-label" for="totalDuration">Total Duration (min)</label>
                <input class="form-control" type="number" id="totalDuration" name="totalDuration" required>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="caloriesBurned">Calories Burned</label>
                <input class="form-control" type="number" id="caloriesBurned" name="caloriesBurned" required>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Create Workout Post</button>
            </div>
        </form>
        <a href="/workoutPosts">All Workout Posts</a>
    </div>
</div>
