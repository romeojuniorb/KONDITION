<% layout('layouts/boilerplate') %>

<div class="container mt-5">
  <h1 class="text-center">Welcome to Your Dashboard, <%= user.username %>!</h1>

  <div class="card mt-4">
    <div class="card-header">
      <h3>Your Fitness Overview</h3>
    </div>
    <div class="card-body">
      <p><strong>Email:</strong> <%= user.email %></p>
      <p><strong>Joined:</strong> 
        <%= user.createdAt ? user.createdAt.toDateString() : "Date not available" %>
      </p>
            <hr />
      <p><strong>Quick Links:</strong></p>
      <ul>
        <li><a href="/mealPlans/generate" class="btn btn-link">Generate a Meal Plan</a></li>
        <li><a href="/workoutPlans/generate" class="btn btn-link">Generate a Workout Plan</a></li>
        <li><a href="/posts/new" class="btn btn-link">Create a Post</a></li>
        <li><a href="/posts" class="btn btn-link">View All Posts</a></li>
      </ul>
    </div>
  </div>
</div>
